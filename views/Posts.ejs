<!DOCTYPE html>
<html lang="en" accept-language="en">
<head>
  <title>Travelgraphy - All Posts</title>
  <link rel="icon" href="/images/logo.png" type="image/x-icon">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
  <header class="cabeca">
    <div class="layout">
      <h2>Travelgraphy</h2>
    </div>
    <nav class="layoutTeste">
      <ul>
        <li><a href="/home">Home Page |</a></li>
        <li><a href="/aboutUs">About Us |</a></li>
        <li><a href="/signin">Sign In |</a></li>
        <li><a href="/admin">Admin </a></li>
      </ul>
    </nav>
  </header>
  <header class="cabecaPosts">
    <h1>ALL Travelgraphy</h1>
    <div class="circle-4"></div>
    <div class="circle-6"></div>

    <div class="photo-album">
      <% posts.forEach(post => { %>
      
          <div class="photo-item">
            <div class="photo">
              <img src="<%- post.image %>" alt="image">
            </div>

            <div class="photo-info">
              <h3>Title: <%- post.title %></h3>
              <h4>Location: <%- post.location %></h4>
              <p> Notes: <%- post.comment %></p>
            </div>

            <div class="button-container1">
              <a href="/posts/<%- post._id %>/update" id="buttonDU">Update</a>
              <form action="/posts/<%- post._id %>/delete" method="POST">
                  <input type="submit" value="Delete" id="buttonDE">
              </form>
            </div>
          </div>
        <% }) %>
  </div>
<div class ="botaoPosts">
  <a href="/new-post" class="button-newpost">New Post</a>
  </header>
</div>

  <footer class="footerPosts">
    <p>Developed by Caroline & Priscilla &copy; 2023 </p>
</footer>
</body>
</html>